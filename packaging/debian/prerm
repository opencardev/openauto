set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop services before removal/upgrade
        if [ -x /bin/systemctl ]; then
            /bin/systemctl stop openauto.service || true
            /bin/systemctl stop openauto-btservice.service || true
        fi
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
