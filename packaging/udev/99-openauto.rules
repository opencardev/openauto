# OpenAuto udev rules
# USB devices for Android Auto
SUBSYSTEM=="usb", ATTRS{idVendor}=="18d1", GROUP="openauto", MODE="0664", TAG+="uaccess"
SUBSYSTEM=="usb", ATTRS{idVendor}=="0bb4", GROUP="openauto", MODE="0664", TAG+="uaccess"
SUBSYSTEM=="usb", ATTRS{idVendor}=="22b8", GROUP="openauto", MODE="0664", TAG+="uaccess"
SUBSYSTEM=="usb", ATTRS{idVendor}=="0e8d", GROUP="openauto", MODE="0664", TAG+="uaccess"
SUBSYSTEM=="usb", ATTRS{idVendor}=="12d1", GROUP="openauto", MODE="0664", TAG+="uaccess"
SUBSYSTEM=="usb", ATTRS{idVendor}=="19d2", GROUP="openauto", MODE="0664", TAG+="uaccess"
SUBSYSTEM=="usb", ATTRS{idVendor}=="04e8", GROUP="openauto", MODE="0664", TAG+="uaccess"

# Audio devices
SUBSYSTEM=="sound", GROUP="audio", MODE="0664"
KERNEL=="controlC[0-9]*", GROUP="audio", MODE="0664"

# Video devices
SUBSYSTEM=="drm", GROUP="video", MODE="0664"
KERNEL=="card[0-9]*", GROUP="video", MODE="0664"

# Input devices
SUBSYSTEM=="input", GROUP="input", MODE="0664"
KERNEL=="event[0-9]*", GROUP="input", MODE="0664"
